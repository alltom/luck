OCAMLYACCFLAGS += -v

# Workaround for the fact that ocamldep does not pay attention to .mll
# and .mly files.
OCamlGeneratedFiles(parser.ml parser.mli lexer.ml)

.DEFAULT: $(OCamlProgram luck, parser lexer ast interpret ugen vm compile priority_queue luck)

TESTS[] =
   $(OCamlProgram parser_test, parser lexer ast parser_test)

.PHONY: test
test: $(TESTS)

.PHONY: clean
clean:
   rm -f *.omc *.cm? *.run *.o *.opt \
   lexer.ml parser.ml parser.mli parser.output \
   luck parser_test
